{
    "name": "flat3/revpi",
    "description": "Control package for the Revolution Pi",
    "keywords": [
        "revolutionpi"
    ],
    "homepage": "https://github.com/flat3/revpi",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Lloyd",
            "email": "chrislloyd403@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-ffi": "*",
        "ext-posix": "*",
        "illuminate/collections": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/container": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "nette/php-generator": "^4.1",
        "revolt/event-loop": "^1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^10.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Flat3\\RevPi\\": "src/",
            "Flat3\\RevPi\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Flat3\\RevPi\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "unit": "phpunit --testsuite Unit",
        "analyze": "phpstan",
        "lint": "pint"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
